<?xml version="1.0"?>
 
<project basedir="." name="show" default="deploy">

	<property name="webapp" value="${basedir}/../demo-web/target/webapp"/>
	
    <property name="moduleName" value="javaEE"/>
    <property name="todir-pages" value="${webapp}/WEB-INF/pages/${moduleName}/"/>
    <property name="pages" value="${fromdir}/pages"/>
 
    <target name="deploy">
        <copy todir="${todir-pages}" overwrite="true" verbose="true">
            <fileset dir="${pages}">
                <include name="**" />
            </fileset>
        </copy>
    </target>
</project>